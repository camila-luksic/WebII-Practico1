<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content="IE=edge">
    <title>Lista de Reviews</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/imagenes/wallpaper.jpeg');
            color: #343a40;
        }
    </style>
</head>

<body>
    <%- include('../../components/header') %>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>Lista de Reviews</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Hamburguesa</th>
                                        <th>Comentario</th>
                                        <th>Calificaci√≥n</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% reviews.forEach(review => { %>
                                        <tr>
                                            <td><%= review.burger ? review.burger.nombre : 'Desconocido' %></td>
                                            <td><%= review.comentario %></td>
                                            <td><%= review.estrellas %> estrellas</td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-wBxuSo6tllp3B5btELuehl07yZKkxHlUUXC0KOCm7evHKKD4iefrJyLZtwgHkSfI" crossorigin="anonymous">
    </script>
</body>

</html>
