<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Formulario de Hamburguesas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-image: url('/imagenes/wallpaper.jpeg');
            color: #343a40;
        }
        
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .card-title {
            font-size: 1.5rem;
            color: #000000;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

        .alert-warning {
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
                <div class="card mt-5">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Formulario de Hamburguesas</h5>

                        <form class="needs-validation" method="post" enctype="multipart/form-data" novalidate>
                            <% if (errors) { %>
                                <div class="alert alert-warning" role="alert">
                                    <%= errors.message %>
                                </div>
                            <% } %>

                            <div class="mb-3">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text"
                                    class="form-control <% if (errors?.nombre) { %>is-invalid<% } %>"
                                    id="nombre" name="nombre" placeholder="Nombre" required
                                    value="<%= burger && burger.nombre %>">
                                <% if (errors?.nombre) { %>
                                    <div class="invalid-feedback">
                                        Por favor ingrese un nombre.
                                    </div>
                                <% } %>
                            </div>

                            <div class="mb-3">
                                <label for="descripcion" class="form-label">Descripción</label>
                                <input type="text"
                                    class="form-control <% if (errors?.descripcion) { %>is-invalid<% } %>"
                                    id="descripcion" name="descripcion" placeholder="Descripción" required
                                    value="<%= burger && burger.descripcion %>">
                                <% if (errors?.descripcion) { %>
                                    <div class="invalid-feedback">
                                        Por favor ingrese una descripción.
                                    </div>
                                <% } %>
                            </div>

                            <div class="mb-3">
                                <label for="restauranteId" class="form-label">Restaurante</label>
                                <select id="restauranteId" name="restauranteId" class="form-select" required>
                                    <option value="">Seleccione un restaurante</option>
                                    <% restaurantes.forEach(restaurante => { %>
                                        <option value="<%= restaurante.id %>" <%=(burger &&
                                            burger.restauranteId == restaurante.id) ? "selected" : "" %>>
                                            <%= restaurante.nombre %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-success">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-wBxuSo6tllp3B5btELuehl07yZKkxHlUUXC0KOCm7evHKKD4iefrJyLZtwgHkSfI" crossorigin="anonymous"></script>
</body>

</html>
