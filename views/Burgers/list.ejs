<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content="IE=edge">
    <title>Lista Hamburguesas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-image: url('/imagenes/wallpaper.jpeg');
            color: #343a40;
        }

        .img-thumbnail {
            max-width: 150px;
            height: auto;
        }

        .table td,
        .table th {
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <%- include('../../components/header') %>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title mb-4">
                            <h3>Lista de Hamburguesas</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Descripción</th>
                                        <th>Foto</th>
                                        <th>Restaurante</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% burgers.forEach(burger=> { %>
                                        <tr>
                                            <td>
                                                <%= burger.nombre %>
                                            </td>
                                            <td>
                                                <%= burger.descripcion %>
                                            </td>
                                            <td>
                                                <img src="/imagenes/burgers/<%= burger.id %>.jpg"
                                                    alt="Foto de <%= burger.nombre %>" class="img-thumbnail">
                                            </td>
                                            <td>
                                                <%= burger.restaurante.nombre %>
                                            </td>
                                            <td>
                                                <a class="btn btn-primary btn-sm"
                                                    href="/burgers/<%= burger.id %>/img">Agregar Imagen</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-warning btn-sm"
                                                    href="/burgers/<%= burger.id %>/edit">Editar</a>
                                            </td>
                                            <td>
                                                <form method="post" action="/burgers/<%= burger.id %>/delete"
                                                    class="d-inline"
                                                    onsubmit="return confirm('Está seguro que desea eliminar?')">
                                                    <input class="btn btn-danger btn-sm" type="submit" value="Eliminar">
                                                </form>

                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>