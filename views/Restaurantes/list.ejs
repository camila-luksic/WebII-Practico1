<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content="IE=edge">
    <title>Lista Restaurantes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-image: url('/imagenes/wallpaper.jpeg');
            color: #343a40;
        }
    </style>
</head>

<body>
    <%- include('../../components/header') %>
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <div class="card mt-3">
                        <div class="card-body">
                            <div class="card-title">
                                <h3>Restaurantes Participantes</h3>
                            </div>
                            <div class="table-responsive">
                                <table class="table ">
                                    <thead class="table-dark">

                                        <tr>
                                            <th>Nombre</th>
                                            <th>Logo</th>
                                            <th>Direccion</th>
                                            <th>Telefono</th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% restaurantes.forEach(restaurante=> { %>
                                            <tr>
                                                <td>
                                                    <%= restaurante.nombre %>
                                                </td>
                                                <td>
                                                    <img src="/imagenes/logos/<%= restaurante.id %>.jpg" alt="Logo"
                                                        class="logo-img" />
                                                </td>
                                                <td>
                                                    <%= restaurante.direccion%>
                                                </td>
                                                <td>
                                                    <%= restaurante.telefono%>
                                                </td>
                                                <td><a class="btn btn-info"
                                                        href="/restaurantes/<%= restaurante.id %>/logo">Agregar
                                                        Logo</a></td>
                                                <td><a class="btn btn-primary"
                                                        href="/restaurantes/<%= restaurante.id %>/agregarBurger">Agregar
                                                        Hamburguesas</a></td>
                                                <td>
                                                <td><a class="btn btn-warning"
                                                        href="/restaurantes/<%= restaurante.id %>/edit">Editar</a></td>
                                                <td>
                                                    <form method="post"
                                                        action="/restaurantes/<%= restaurante.id %>/delete"
                                                        onsubmit="return confirm('EstÃ¡ seguro que desea eliminar?')">
                                                        <input class="btn btn-danger" type="submit" value="Eliminar">
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
</body>

</html>